<Window x:Class="Homework4_Part1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Homework4_Part1"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Canvas x:Name="canvas" Height="1000" Width="1000" Canvas.Top="0" Canvas.Left="0" Background="White" Margin="-77,-71,-123,-495"/>

        <Label Content="Your Weight (lbs)" HorizontalAlignment="Left" Margin="287,158,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="weight" HorizontalAlignment="Left" Margin="400,162,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="120"/>
        <Label Content="Your Height (in)" HorizontalAlignment="Left" Margin="291,195,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="height" HorizontalAlignment="Left" Margin="400,199,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="120"/>
        <Label x:Name="label" Content="Your BMI: " HorizontalAlignment="Center" Margin="0,305,0,0" VerticalAlignment="Top"/>
        <Button Content="Calculate" HorizontalAlignment="Center" Margin="0,280,0,0" VerticalAlignment="Top" Click="Button_Click"/>

    </Grid>
</Window>
